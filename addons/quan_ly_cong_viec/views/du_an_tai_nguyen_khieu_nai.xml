<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Du An Form View -->
        <record id="view_du_an_form" model="ir.ui.view">
            <field name="name">du_an.form</field>
            <field name="model">du_an</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_bat_dau" string="Bắt đầu" type="object" class="btn-success" attrs="{'invisible': [('trang_thai', '!=', 'ke_hoach')]}"/>
                        <button name="action_hoan_thanh" string="Hoàn thành" type="object" class="btn-primary" attrs="{'invisible': [('trang_thai', '!=', 'dang_tien_hanh')]}"/>
                        <button name="action_huy" string="Hủy" type="object" class="btn-danger" attrs="{'invisible': [('trang_thai', 'in', ['hoan_thanh', 'huy'])]}"/>
                        <field name="trang_thai" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ten_du_an" placeholder="Tên dự án"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin cơ bản">
                                <field name="ma_du_an"/>
                                <field name="khach_hang_id"/>
                                <field name="phong_ban_id"/>
                                <field name="nguoi_phu_trach_id" readonly="1"/>
                            </group>
                            <group string="Thời gian">
                                <field name="ngay_bat_dau"/>
                                <field name="ngay_ket_thuc"/>
                            </group>
                        </group>
                        <group>
                            <group string="Ngân sách">
                                <field name="ngan_sach"/>
                                <field name="chi_phi_thuc_te"/>
                            </group>
                        </group>
                        <group string="Mô tả">
                            <field name="mo_ta" nolabel="1"/>
                        </group>
                        <notebook>
                            <page string="Công việc">
                                <field name="cong_viec_ids">
                                    <tree>
                                        <field name="ma_cong_viec"/>
                                        <field name="tieu_de"/>
                                        <field name="trang_thai"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Tài nguyên">
                                <field name="tai_nguyen_ids">
                                    <tree>
                                        <field name="ten_tai_nguyen"/>
                                        <field name="loai_tai_nguyen"/>
                                        <field name="so_luong"/>
                                        <field name="gia_tri"/>
                                        <field name="trang_thai"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Ghi chú">
                                <field name="ghi_chu" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_du_an_tree" model="ir.ui.view">
            <field name="name">du_an.tree</field>
            <field name="model">du_an</field>
            <field name="arch" type="xml">
                <tree decoration-success="trang_thai == 'hoan_thanh'" decoration-info="trang_thai == 'dang_tien_hanh'" decoration-danger="trang_thai == 'huy'">
                    <field name="ma_du_an"/>
                    <field name="ten_du_an"/>
                    <field name="khach_hang_id"/>
                    <field name="phong_ban_id"/>
                    <field name="nguoi_phu_trach_id"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="ngan_sach"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record id="action_du_an" model="ir.actions.act_window">
            <field name="name">Dự án</field>
            <field name="res_model">du_an</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Tai Nguyen Du An Form View -->
        <record id="view_tai_nguyen_du_an_form" model="ir.ui.view">
            <field name="name">tai_nguyen_du_an.form</field>
            <field name="model">tai_nguyen_du_an</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Thông tin tài nguyên">
                                <field name="du_an_id"/>
                                <field name="ten_tai_nguyen"/>
                                <field name="loai_tai_nguyen"/>
                            </group>
                            <group string="Chi tiết">
                                <field name="nhan_vien_id" attrs="{'invisible': [('loai_tai_nguyen', '!=', 'nhan_luc')]}"/>
                                <field name="so_luong"/>
                                <field name="gia_tri"/>
                                <field name="trang_thai"/>
                            </group>
                        </group>
                        <group string="Thời gian sử dụng">
                            <field name="ngay_bat_dau"/>
                            <field name="ngay_ket_thuc"/>
                        </group>
                        <group string="Ghi chú">
                            <field name="ghi_chu" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tai_nguyen_du_an_tree" model="ir.ui.view">
            <field name="name">tai_nguyen_du_an.tree</field>
            <field name="model">tai_nguyen_du_an</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="du_an_id"/>
                    <field name="ten_tai_nguyen"/>
                    <field name="loai_tai_nguyen"/>
                    <field name="so_luong"/>
                    <field name="gia_tri"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record id="action_tai_nguyen_du_an" model="ir.actions.act_window">
            <field name="name">Tài nguyên dự án</field>
            <field name="res_model">tai_nguyen_du_an</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Xu Ly Khieu Nai Form View -->
        <record id="view_xu_ly_khieu_nai_form" model="ir.ui.view">
            <field name="name">xu_ly_khieu_nai.form</field>
            <field name="model">xu_ly_khieu_nai</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_bat_dau_xu_ly" string="Bắt đầu xử lý" type="object" class="btn-primary" attrs="{'invisible': [('trang_thai', '!=', 'moi')]}"/>
                        <button name="action_phan_hoi" string="Phản hồi" type="object" class="btn-info" attrs="{'invisible': [('trang_thai', '!=', 'dang_xu_ly')]}"/>
                        <button name="action_hoan_thanh" string="Hoàn thành" type="object" class="btn-success" attrs="{'invisible': [('trang_thai', '!=', 'da_phan_hoi')]}"/>
                        <button name="action_tu_choi" string="Từ chối" type="object" class="btn-danger"/>
                        <field name="trang_thai" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="tieu_de_khieu_nai" placeholder="Tiêu đề khiếu nại"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin cơ bản">
                                <field name="ma_khieu_nai"/>
                                <field name="khach_hang_id"/>
                                <field name="loai_khieu_nai"/>
                                <field name="muc_do_uu_tien"/>
                            </group>
                            <group string="Thời gian">
                                <field name="ngay_khieu_nai"/>
                                <field name="ngay_xu_ly"/>
                                <field name="ngay_ket_thuc"/>
                            </group>
                        </group>
                        <group string="Nội dung khiếu nại">
                            <field name="noi_dung_khieu_nai" nolabel="1"/>
                        </group>
                        <group>
                            <group string="Xử lý">
                                <field name="nguoi_xu_ly_id"/>
                                <field name="ket_qua"/>
                            </group>
                            <group string="Bồi thường">
                                <field name="so_tien_boi_thuong"/>
                            </group>
                        </group>
                        <group string="Giải pháp">
                            <field name="giai_phap" nolabel="1"/>
                        </group>
                        <group string="Phản hồi xử lý">
                            <field name="phan_hoi_xu_ly" nolabel="1"/>
                        </group>
                        <group string="Ghi chú">
                            <field name="ghi_chu" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_xu_ly_khieu_nai_tree" model="ir.ui.view">
            <field name="name">xu_ly_khieu_nai.tree</field>
            <field name="model">xu_ly_khieu_nai</field>
            <field name="arch" type="xml">
                <tree decoration-danger="muc_do_uu_tien == 'rat_cao'" decoration-warning="muc_do_uu_tien == 'cao'" decoration-success="trang_thai == 'hoan_thanh'" decoration-muted="trang_thai == 'tu_choi'">
                    <field name="ma_khieu_nai"/>
                    <field name="tieu_de_khieu_nai"/>
                    <field name="khach_hang_id"/>
                    <field name="loai_khieu_nai"/>
                    <field name="muc_do_uu_tien"/>
                    <field name="ngay_khieu_nai"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record id="action_xu_ly_khieu_nai" model="ir.actions.act_window">
            <field name="name">Xử lý khiếu nại</field>
            <field name="res_model">xu_ly_khieu_nai</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
