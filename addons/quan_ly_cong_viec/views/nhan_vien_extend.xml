<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_nhan_vien_form_cong_viec" model="ir.ui.view">
            <field name="name">nhan_vien.form.cong_viec</field>
            <field name="model">nhan_vien</field>
            <field name="inherit_id" ref="nhan_su.view_nhan_vien_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Công việc">
                        <field name="cong_viec_ids">
                            <tree>
                                <field name="ma_cong_viec"/>
                                <field name="tieu_de"/>
                                <field name="loai_cong_viec"/>
                                <field name="khach_hang_id"/>
                                <field name="trang_thai"/>
                                <field name="ngay_bat_dau"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
