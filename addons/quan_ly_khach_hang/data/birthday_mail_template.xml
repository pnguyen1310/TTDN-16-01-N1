<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_birthday_customer" model="mail.template">
            <field name="name">Chúc mừng sinh nhật khách hàng</field>
            <field name="model_id" ref="model_khach_hang"/>
            <field name="subject">Chúc mừng sinh nhật ${object.ten_khach_hang}</field>
            <field name="email_from">${(user.email_formatted or '') | safe}</field>
            <field name="email_to">${object.email or ''}</field>
            <field name="body_html" type="html">
                <![CDATA[
                <p>Chào ${object.ten_khach_hang},</p>
                <p>Chúng tôi xin gửi lời chúc mừng sinh nhật và cảm ơn bạn đã đồng hành.</p>
                <p>Chúc bạn một ngày sinh nhật thật vui vẻ và nhiều sức khỏe!</p>
                <p>Trân trọng,<br/>Đội ngũ chăm sóc khách hàng</p>
                ]]>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
