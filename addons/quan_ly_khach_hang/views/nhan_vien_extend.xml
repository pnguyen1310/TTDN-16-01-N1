<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_nhan_vien_form_khach_hang" model="ir.ui.view">
            <field name="name">nhan_vien.form.khach_hang</field>
            <field name="model">nhan_vien</field>
            <field name="inherit_id" ref="nhan_su.view_nhan_vien_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Khách hàng phụ trách">
                            <field name="khach_hang_ids">
                                <tree>
                                    <field name="ma_khach_hang"/>
                                    <field name="ten_khach_hang"/>
                                    <field name="so_dien_thoai"/>
                                    <field name="trang_thai"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
