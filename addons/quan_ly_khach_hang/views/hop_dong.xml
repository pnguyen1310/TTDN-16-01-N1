<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hop_dong_form" model="ir.ui.view">
            <field name="name">hop_dong.form</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_cho_duyet" string="Gửi duyệt" type="object" class="btn-primary" attrs="{'invisible': [('trang_thai', '!=', 'nhap')]}"/>
                        <button name="action_duyet" string="Duyệt" type="object" class="btn-success" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                        <button name="action_thuc_hien" string="Thực hiện" type="object" class="btn-info" attrs="{'invisible': [('trang_thai', '!=', 'da_ky')]}"/>
                        <button name="action_hoan_thanh" string="Hoàn thành" type="object" class="btn-success" attrs="{'invisible': [('trang_thai', '!=', 'dang_thuc_hien')]}"/>
                        <button name="action_huy" string="Hủy" type="object" class="btn-danger" attrs="{'invisible': [('trang_thai', 'in', ['hoan_thanh', 'huy'])]}"/>
                        <field name="trang_thai" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ten_hop_dong" placeholder="Tên hợp đồng"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin cơ bản">
                                <field name="so_hop_dong"/>
                                <field name="khach_hang_id"/>
                                <field name="loai_hop_dong"/>
                            </group>
                            <group string="Thời gian">
                                <field name="ngay_ky"/>
                                <field name="ngay_hieu_luc"/>
                                <field name="ngay_het_han"/>
                            </group>
                        </group>
                        <group>
                            <group string="Giá trị">
                                <field name="gia_tri_hop_dong"/>
                                <field name="don_vi_tien_te"/>
                            </group>
                            <group string="Người ký">
                                <field name="nguoi_dai_dien"/>
                                <field name="nguoi_ky_kh"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Nội dung">
                                <group>
                                    <field name="noi_dung" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Điều khoản">
                                <group>
                                    <field name="dieu_khoan" nolabel="1"/>
                                </group>
                            </page>
                            <page string="File đính kèm">
                                <group>
                                    <field name="file_hop_dong" filename="file_name"/>
                                    <field name="file_name" invisible="1"/>
                                </group>
                            </page>
                            <page string="Ghi chú">
                                <group>
                                    <field name="ghi_chu" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hop_dong_tree" model="ir.ui.view">
            <field name="name">hop_dong.tree</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <tree decoration-success="trang_thai == 'hoan_thanh'" decoration-danger="trang_thai == 'huy'" decoration-info="trang_thai == 'dang_thuc_hien'">
                    <field name="so_hop_dong"/>
                    <field name="ten_hop_dong"/>
                    <field name="khach_hang_id"/>
                    <field name="loai_hop_dong"/>
                    <field name="gia_tri_hop_dong"/>
                    <field name="ngay_ky"/>
                    <field name="ngay_het_han"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record id="action_hop_dong" model="ir.actions.act_window">
            <field name="name">Hợp đồng</field>
            <field name="res_model">hop_dong</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
