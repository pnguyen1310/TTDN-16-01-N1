<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_chien_dich_form" model="ir.ui.view">
            <field name="name">chien_dich.form</field>
            <field name="model">chien_dich</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_bat_dau" string="Bắt đầu" type="object" class="btn-success" attrs="{'invisible': [('trang_thai', '!=', 'ke_hoach')]}"/>
                        <button name="action_tam_dung" string="Tạm dừng" type="object" class="btn-warning" attrs="{'invisible': [('trang_thai', '!=', 'dang_chay')]}"/>
                        <button name="action_ket_thuc" string="Kết thúc" type="object" class="btn-primary" attrs="{'invisible': [('trang_thai', 'not in', ['dang_chay', 'tam_dung'])]}"/>
                        <button name="action_huy" string="Hủy" type="object" class="btn-danger" attrs="{'invisible': [('trang_thai', 'in', ['ket_thuc', 'huy'])]}"/>
                        <field name="trang_thai" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ten_chien_dich" placeholder="Tên chiến dịch"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin cơ bản">
                                <field name="ma_chien_dich"/>
                                <field name="loai_chien_dich"/>
                                <field name="nguoi_phu_trach_id"/>
                            </group>
                            <group string="Thời gian">
                                <field name="ngay_bat_dau"/>
                                <field name="ngay_ket_thuc"/>
                            </group>
                        </group>
                        <group>
                            <group string="Ngân sách">
                                <field name="ngan_sach"/>
                                <field name="chi_phi_thuc_te"/>
                            </group>
                            <group string="KPI">
                                <field name="so_khach_hang_muc_tieu"/>
                                <field name="so_khach_hang_tiep_can"/>
                                <field name="ty_le_chuyen_doi"/>
                                <field name="so_luong_khach_hang"/>
                            </group>
                        </group>
                        <group string="Mục tiêu">
                            <field name="muc_tieu" nolabel="1"/>
                        </group>
                        <group string="Đối tượng mục tiêu">
                            <field name="doi_tuong_muc_tieu" nolabel="1"/>
                        </group>
                        <notebook>
                            <page string="Nội dung">
                                <field name="noi_dung" nolabel="1"/>
                            </page>
                            <page string="Khách hàng tham gia">
                                <field name="khach_hang_ids">
                                    <tree>
                                        <field name="ma_khach_hang"/>
                                        <field name="ten_khach_hang"/>
                                        <field name="so_dien_thoai"/>
                                        <field name="email"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kết quả">
                                <field name="ket_qua" nolabel="1"/>
                            </page>
                            <page string="Ghi chú">
                                <field name="ghi_chu" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_chien_dich_tree" model="ir.ui.view">
            <field name="name">chien_dich.tree</field>
            <field name="model">chien_dich</field>
            <field name="arch" type="xml">
                <tree decoration-success="trang_thai == 'ket_thuc'" decoration-info="trang_thai == 'dang_chay'" decoration-warning="trang_thai == 'tam_dung'">
                    <field name="ma_chien_dich"/>
                    <field name="ten_chien_dich"/>
                    <field name="loai_chien_dich"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="ngan_sach"/>
                    <field name="so_luong_khach_hang"/>
                    <field name="ty_le_chuyen_doi"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record id="action_chien_dich" model="ir.actions.act_window">
            <field name="name">Chiến dịch Marketing</field>
            <field name="res_model">chien_dich</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
